<% include partials/header %>

<div class="ui main text container">

    <div class="ui huge header">
        <h1>RESTful Blog App</h1>
    </div>

    <div class="ui top attached segment">
        <div class="ui divided items">
            <% posts.forEach(el => { %>
                <div class="item">
                    <div class="image">
                        <img class="ui centered rounded image" src="<%= el.image %>" alt="">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= el._id %>"> <%= el.title %> </a>
                        <div class="meta">
                            <span> <%= el.created.toDateString() %> </span>
                        </div>
                        <div class="description">
                            <p> <%- el.body.substring(0, 100) %> </p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/blogs/<%= el._id %>">Read more <i class="right chevron icon"></i></a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<% include partials/footer %>